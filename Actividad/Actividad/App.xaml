<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Actividad.App">

    <Application.Resources>

        <ResourceDictionary>

            <Color x:Key="Crear">#34C759</Color>
            <Color x:Key="Editar">#007AFF</Color>
            <Color x:Key="Borrar">#FF3B30</Color>
            <Color x:Key="Texto">White</Color>

        </ResourceDictionary>

        <Style x:Key="BotonCrear"
               TargetType="Button">
            <Setter Property="TextColor"
                    Value="{DynamicResource Texto}" />
            <Setter Property="BackgroundColor"
                    Value="{DynamicResource Crear}" />
        </Style>

        <Style x:Key="BotonEditar"
               TargetType="Button">
            <Setter Property="TextColor"
                    Value="{DynamicResource Texto}" />
            <Setter Property="BackgroundColor"
                    Value="{DynamicResource Editar}" />
        </Style>

        <Style x:Key="BotonBorrar"
               TargetType="Button">
            <Setter Property="TextColor"
                    Value="{DynamicResource Texto}" />
            <Setter Property="BackgroundColor"
                    Value="{DynamicResource Borrar}" />
        </Style>


    </Application.Resources>

</Application>